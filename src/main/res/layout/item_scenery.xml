<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="#ffffff">

    <com.example.journey.util.RoundRectImageView
        android:id="@+id/scenery_cover"
        android:layout_width="68dp"
        android:layout_height="65dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/food_1"
        android:layout_marginStart="5dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/scenery_cover"
        android:orientation="vertical">

        <TextView
            android:id="@+id/scenery_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="这是标题"
            android:textSize="18sp">
        </TextView>

        <TextView
            android:id="@+id/scenery_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:textColor="#ff848484"
            android:ellipsize="end"/>
    </LinearLayout>
</RelativeLayout>